{
  "version": 2,
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },

    { "src": "^/widget(?:/.*)?$", "dest": "/public/widget/index.html" },
    { "src": "^/setup(?:/.*)?$",  "dest": "/public/setup/index.html" },

    { "src": "^/(.*)$", "dest": "/public/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)\\.html",
      "headers": [{ "key": "Cache-Control", "value": "no-store" }]
    }
  ]
}
